<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FilterActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_marginTop="@dimen/_5sdp">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="20dp"
            android:id="@+id/imgclose"
            android:layout_margin="@dimen/_10sdp"
            android:src="@drawable/close2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filter2"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_margin="@dimen/_5sdp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sort_by"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:textColor="@color/black"/>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >


                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:text="A-Z"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:text="Most Popular"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:text="Newest"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </RadioGroup>
        </LinearLayout>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_60sdp"
                android:text="Lowest Price"
                android:textColor="@color/black"
                android:textStyle="bold" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_60sdp"
                android:text="Highest Price"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_60sdp"
            android:text="Most Suitable"
            android:textColor="@color/black"
            android:textStyle="bold" />


        </RadioGroup>



    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/property_type"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/see_all"
            android:layout_marginLeft="@dimen/_110sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:textColor="#0A8170"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="131dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="ALL"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="Hotels"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:text="House"
                android:textColor="@color/black"
                android:textStyle="bold" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_60sdp"
            android:text="Apartment"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_60sdp"
            android:text="Villa"
            android:textColor="@color/black"
            android:textStyle="bold" />


    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/facilities"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/see_all"
            android:layout_marginLeft="@dimen/_55sdp"
            android:layout_marginTop="@dimen/_3sdp"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:textColor="#0A8170"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="141dp"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_14sdp"
            android:background="@drawable/box">


            <ImageView
                android:layout_width="45dp"
                android:layout_height="20dp"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/garage" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="@string/parking_lot"
                android:textColor="@color/white"
                android:textSize="@dimen/_13ssp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="95dp"
            android:layout_height="35dp"

            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_16sdp"

            android:background="@drawable/box5">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="18dp"
                android:layout_marginTop="@dimen/_6sdp"
                android:src="@drawable/gym" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="@string/gym"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="95dp"
            android:layout_height="35dp"

            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_16sdp"

            android:background="@drawable/box5">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="18dp"
                android:layout_marginTop="@dimen/_6sdp"
                android:src="@drawable/pool" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="@string/pool"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp" />


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="143dp"
            android:layout_height="35dp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/box5">


            <ImageView
                android:layout_width="45dp"
                android:layout_height="18dp"
                android:layout_marginTop="@dimen/_6sdp"
                android:src="@drawable/dog" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="@string/dog"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="95dp"
            android:layout_height="35dp"

            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_10sdp"

            android:background="@drawable/box5">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="18dp"
                android:layout_marginTop="@dimen/_7sdp"
                android:src="@drawable/park" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="@string/park"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp" />


        </LinearLayout>





</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="154dp"
            android:layout_height="35dp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/box5">


            <ImageView
                android:layout_width="45dp"
                android:layout_height="18dp"
                android:layout_marginTop="@dimen/_6sdp"
                android:src="@drawable/child" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="@string/child"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="135dp"
            android:layout_height="35dp"

            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_10sdp"

            android:background="@drawable/box5">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="18dp"
                android:layout_marginTop="@dimen/_7sdp"
                android:src="@drawable/restaurant" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="@string/restaurant"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp" />


        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/price"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="388dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:max="150"
            android:progress="50">

        </SeekBar>


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:text="@string/egp_0"
            android:textColor="#0A8170"
            android:textStyle="bold"
            android:textSize="@dimen/_15sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_50sdp"
            android:text="@string/egp_4000"
            android:textColor="#0A8170"
            android:textStyle="bold"
            android:textSize="@dimen/_15sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_50sdp"
            android:text="@string/egp_8000"
            android:textColor="#0A8170"
            android:textStyle="bold"
            android:textSize="@dimen/_15sdp"/>


    </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_10sdp">



    <Button
        android:id="@+id/btnapply"
        android:layout_width="363dp"
        android:layout_height="wrap_content"

        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/button"
        android:text="@string/apply"
        android:textColor="@color/white"
        android:textSize="@dimen/_15ssp"
        app:cardElevation="10dp" />

</LinearLayout>
</LinearLayout>