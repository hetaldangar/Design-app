<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:src="@drawable/back2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cards"
            android:layout_marginTop="@dimen/_10sdp"
            android:textSize="@dimen/_18ssp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="364dp"
        android:layout_height="84dp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"

        android:background="@drawable/box5">

        <ImageView
            android:layout_width="54dp"
            android:layout_height="36dp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:id="@+id/imgpay"
            android:src="@drawable/paypal" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/txtpay"
                android:text="Paypal"
                android:textColor="@color/black"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"

                android:layout_marginTop="@dimen/_3sdp"
                android:text="....email@gmail.com"

                android:textSize="@dimen/_12ssp"
                android:textStyle="bold" />


        </LinearLayout>

        <ImageView
            android:layout_width="54dp"
            android:layout_height="33dp"
            android:layout_marginLeft="@dimen/_55sdp"
            android:id="@+id/imgnext"
            android:layout_marginTop="@dimen/_20sdp"
            android:src="@drawable/next2" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="364dp"
        android:layout_height="84dp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"

        android:background="@drawable/box5">

        <ImageView
            android:layout_width="54dp"
            android:layout_height="36dp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:id="@+id/imgmaster"
            android:layout_marginTop="@dimen/_20sdp"
            android:src="@drawable/master_card" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:id="@+id/txtmaster"
                android:layout_marginTop="@dimen/_10sdp"

                android:text="Master Card"
                android:textColor="@color/black"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"

                android:layout_marginTop="@dimen/_3sdp"
                android:text="....email@gmail.com"

                android:textSize="@dimen/_12ssp"
                android:textStyle="bold" />


        </LinearLayout>

        <ImageView
            android:layout_width="54dp"
            android:layout_height="33dp"
            android:id="@+id/imgmasternext"
            android:layout_marginLeft="@dimen/_55sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:src="@drawable/next2" />


    </LinearLayout>
</LinearLayout>