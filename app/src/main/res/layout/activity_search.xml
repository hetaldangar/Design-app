<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="106dp">

        <LinearLayout
            android:layout_width="74dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="52dp"
                android:layout_height="61dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:src="@drawable/leftarrow" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="268dp"
            android:layout_height="69dp"

            android:layout_marginTop="@dimen/_10sdp"

            android:background="@drawable/box5">

            <ImageView
                android:layout_width="34dp"
                android:layout_height="51dp"
                android:layout_margin="@dimen/_10sdp"
                android:src="@drawable/search2" />

            <EditText
                android:id="@+id/edtsearch"
                android:layout_width="126dp"
                android:layout_height="wrap_content"
                android:background="@color/white"


                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:hint="Search"
                android:textColorHint="@color/black"
                android:textSize="@dimen/_15ssp" />

            <ImageView
                android:layout_width="34dp"
                android:layout_height="51dp"
                android:layout_margin="@dimen/_7sdp"
                android:src="@drawable/microphone" />


        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_margin="@dimen/_7sdp"
            android:src="@drawable/locationarrow2" />

        <TextView
            android:layout_width="126dp"
            android:layout_height="39dp"
            android:layout_margin="@dimen/_10sdp"
            android:hint="Search nearby"
            android:gravity="center"
            android:textSize="@dimen/_15ssp" />
    </LinearLayout>

    z<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="388dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:text="Continue your search"
            android:textColor="@color/black"
            android:textSize="@dimen/_25ssp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="381dp"
            android:layout_height="175dp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:background="@drawable/box4">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:src="@drawable/home5" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Modern Apartment"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_20ssp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:src="@drawable/close" />


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:src="@drawable/home5" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Modern Apartment"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_20ssp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:src="@drawable/close" />


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:src="@drawable/home5" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Modern Apartment"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_20ssp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:src="@drawable/close" />


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <Button
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnnext"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"

            android:background="@drawable/button"
            android:text="@string/button2"
            android:textColor="@color/white" />
    </LinearLayout>
</LinearLayout>