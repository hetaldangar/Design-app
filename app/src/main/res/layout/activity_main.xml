<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".MainActivity">

   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="669dp"
       android:layout_marginTop="@dimen/_70ssp"
       android:orientation="vertical">

      <ImageView
          android:layout_width="300dp"
          android:layout_height="300dp"
          android:layout_gravity="center"
          android:layout_marginTop="@dimen/_20ssp"
          android:src="@drawable/location7"/>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="@dimen/_10sdp"
          android:text="Find the best hotels and resorts near you"
          android:textColor="@color/black"
          android:textSize="@dimen/_25ssp"
          android:textStyle="bold" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/_10sdp"
          android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vitae sapien viverra laoreet fusce cras nibh."
          android:textSize="@dimen/_15ssp" />

      <ImageView
          android:id="@+id/imgarrow"
          android:layout_width="@dimen/_50sdp"
          android:layout_height="@dimen/_50sdp"
          android:layout_gravity="end"
          android:layout_margin="@dimen/_20sdp"
          android:src="@drawable/arrow2"/>

   </LinearLayout>
</LinearLayout>